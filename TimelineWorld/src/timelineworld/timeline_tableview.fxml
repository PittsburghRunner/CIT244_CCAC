<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?> 
<?import javafx.collections.*?> 

<GridPane alignment="CENTER" hgap="10.0" vgap="10.0"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="timelineworld.TimelineWorldController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Timeline Component List"                
           GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>
    <TableView  fx:id="components" GridPane.columnIndex="0" GridPane.rowIndex="1" items="components">
        <columns>
            <TableColumn fx:id="createdOn" text="Created On">
                <cellValueFactory>
                    <PropertyValueFactory property="createdOn" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Title">
                <cellValueFactory>
                    <PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Created By">
                <cellValueFactory>
                    <PropertyValueFactory property="createdBy" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Reference Source URL">
                <cellValueFactory>
                    <PropertyValueFactory property="referenceSourceUrl" />
                </cellValueFactory>
            </TableColumn>
        </columns>    
        <sortOrder>
            <fx:reference source="createdOn"/>
        </sortOrder> 
    </TableView>
</GridPane>